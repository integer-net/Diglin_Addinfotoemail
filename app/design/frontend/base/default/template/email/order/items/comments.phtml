<?php $_order = $this->getOrder(); ?>
<?php if ($_order): ?>
    <?php $_items = $_order->getAllItems(); ?>
    <?php $i = 0; ?>
    <?php $comments = $this->getComments($_items); ?>
    <?php if (count($comments) > 0): ?>
        <table cellspacing="0" cellpadding="0" border="0" width="100%">
            <thead>
                <tr>
                    <th align="left" width="325" bgcolor="#EAEAEA"
                        style="font-size:13px; padding:5px 9px 6px 9px; line-height:1em;"><?php echo Mage::helper('addinfotoemail')
                            ->__('Additional Information concerning the product(s) you have bought'); ?>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td valign="top"
                        style="font-size:12px; padding:7px 9px 9px 9px; border-left:1px solid #EAEAEA; border-bottom:1px solid #EAEAEA; border-right:1px solid #EAEAEA;">
                        <?php foreach ($comments as $comment): ?>
                            <strong><?php echo $comment['title']; ?></strong><br/>
                            <?php echo $comment['comment']; ?><br/>
                            <?php $i++; ?>
                        <?php endforeach; ?>
                    </td>
                </tr>
            </tbody>
        </table>
    <?php endif; ?>
<?php endif; ?>
